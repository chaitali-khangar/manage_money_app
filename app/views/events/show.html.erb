<p id="notice"><%= notice %></p>

<p>
  <strong>Event type:</strong>
  <%= @event.event_type %>
</p>

<p>
  <strong>Event date:</strong>
  <%= @event.event_date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Total amount:</strong>
  $ <%= @event.total_amount %>
</p>

<p>
  <strong>Per User amount:</strong>
  $ <%= @event.per_user_amount %>
</p>

<p>
	<strong><u>Amount Paid Summary</u></strong>
	<% @event.event_managers.each do |user| %>
		<p> 
		<strong> <%= user.user_name %> paid amount is </strong>
		$ <%= user.amount%>
		</p>
	<% end %>
	<p><u><strong>Own Summary </strong></u></p>
	<%= @event.owe_summary.html_safe %>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
